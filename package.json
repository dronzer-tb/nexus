{
  "name": "nexus",
  "version": "1.8.0",
  "description": "Unified, self-hosted remote resource monitoring and management platform by Dronzer Studios",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:node": "node src/index.js --mode=node",
    "start:server": "node src/index.js --mode=server",
    "start:combine": "node src/index.js --mode=combine",
    "dev": "nodemon src/index.js --mode=combine",
    "build:dashboard": "cd dashboard && npm run build",
    "install:dashboard": "cd dashboard && npm install",
    "setup": "npm install && npm run install:dashboard && npm run build:dashboard",
    "setup:nginx": "node src/setup/wizard.js"
  },
  "keywords": [
    "monitoring",
    "system",
    "metrics",
    "remote",
    "management",
    "server"
  ],
  "author": "Dronzer Studios",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "systeminformation": "^5.21.20",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
